<resources>

    <!-- Base application theme. -->
    <style name="CalcTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="SimpleTextstyle" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/screen_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAlignment">viewEnd</item>
    </style>

    <style name="SimpleTextstyle.Italic" parent="SimpleTextstyle">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="ButtonStyle" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">@dimen/grid_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@drawable/button_shape_selector</item>
    </style>

    <style name="ButtonStyle.Number" parent="ButtonStyle">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="ButtonStyle.Symbol" parent="ButtonStyle">
        <item name="android:textColor">@color/colorSymbolLight</item>
    </style>



</resources>
